
public class LinkedList<T> {

	private class Node<T>
	{
		
		public Node(T value) {
			this.value = value;
		}
		T value;
		Node<T> next;
		public boolean hasNext() {
			return next!=null;
		}
	}
	
	private Node<T> getInstance(T value){
		return new Node<T>(value);
	}
	
	private Node<T> root;
	public void add(T value) {
		if(root == null) {
			root = getInstance(value)
		}else {
			Node<T> node = root;
			while(node.hasNext()) {
				node = node.next;
			}//while end.
			node.next = getInstance(value);
			
		}
	
	}
}
